@model LoginModel
@{
	Layout = "_LayoutDeslogado";
	ViewData["Titlle"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control mb-1" id="login" placeholder="Digite o email">
        <div class="mb-3">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
    </div>
    <div class="form-group">
        <label for="password">Senha</label>
        <input type="password" asp-for="Password" class="form-control mb-1" id="senha" placeholder="Digite a senha">
        <div class="mb-3">
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>

    <button type="submit" class="btn btn-primary w-100">Entrar</button>
</form>