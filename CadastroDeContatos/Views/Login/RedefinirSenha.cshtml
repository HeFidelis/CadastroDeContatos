@model RedefinirSenhaModel
@{
	Layout = "_LayoutDeslogado";
	ViewData["Titlle"] = "Redefinir a senha";
}

@if (TempData["MensagemErro"] != null)
{
	<div class="alert alert-danger" role="alert">
		<button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
		@TempData["MensagemErro"]
	</div>
}

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
	<div class="form-group">
		<label for="login">Login</label>
		<input type="text" asp-for="Login" class="form-control mb-1" id="login" placeholder="Digite o login">
		<div class="mb-3">
			@Html.ValidationMessageFor(x => x.Login)
		</div>
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<input type="text" asp-for="Email" class="form-control mb-1" id="email" placeholder="Digite o email">
		<div class="mb-3">
			@Html.ValidationMessageFor(x => x.Email)
		</div>
	</div>

	<button type="submit" class="btn btn-primary w-100 mb-2">Redefinir Senha</button>
	<a class="btn btn-secondary w-100" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
</form>