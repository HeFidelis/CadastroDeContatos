@model ContatoModel
@{
	ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

	<h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label for="nome">Nome</label>
		<input type="text" asp-for="Name" class="form-control mb-2" placeholder="Digite o nome do contato">
	</div>

	<div class="form-group">
		<label for="email">Email</label>
		<input type="text" asp-for="Email" class="form-control mb-2" placeholder="Digite o email do contato">
	</div>

	<div class="form-group">
		<label for="celular">Celular</label>
		<input type="text" asp-for="Celular" class="form-control mb-2" placeholder="Digite o numero do contato">
	</div>

	<button type="submit" class="btn btn-primary w-100 mb-2">Alterar</button>
	<a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>