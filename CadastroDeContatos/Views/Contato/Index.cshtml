@model List<ContatoModel>
@{
	ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">

	<div class="d-grid gap-2 d-md-flex justfy-content-md-start">
		<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar Novo Contato</a>
	</div>
	<br />

	@if (TempData["MensagemSucesso"] != null)
	{
		<div class="alert alert-success" role="alert">
			<button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
			@TempData["MensagemSucesso"]
		</div>
	}

	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert">
			<button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
			@TempData["MensagemErro"]
		</div>
	}

	<br />

	<h1 class="display-4">Listagem de contatos</h1>

	<table class="table" id="table-contatos">
		<thead>
			<tr>
				<th scope="col" class="text-center">#</th>
				<th scope="col" class="text-center">Nome</th>
				<th scope="col" class="text-center">Email</th>
				<th scope="col" class="text-center">Celular</th>
				<th scope="col" class="text-center">       </th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			@if (Model != null && Model.Any())
			{
				foreach (ContatoModel contato in Model)
				{
					<tr>
						<th scope="row" class="text-center">@contato.Id</th>
						<td class="text-center">@contato.Name</td>
						<td class="text-center">@contato.Email</td>
						<td class="text-center">@contato.Celular</td>
						<td class="text-center">
							<div class="btn-group" role="group">
								<a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
								<a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
							</div>
						</td>
					</tr>
				}
			}
			else
			{
				<tr class="odd"><td valign="top" colspan="5" class="text-center">Nenhum contato encontrado</td></tr>
			}
		</tbody>
	</table>

</div>