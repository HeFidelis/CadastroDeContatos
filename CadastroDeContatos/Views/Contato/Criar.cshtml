@model ContatoModel
@{
	ViewData["Title"] = "Criar Contato";
}

<div class="text-center">

	<h1 class="display-4">Cadastrar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

	<div class="form-group">
		<label for="Name">Nome</label>
		<input type="text" asp-for="Name" class="form-control mb-1" placeholder="Digite o nome do contato">
		<div class="mb-3">
			@Html.ValidationMessageFor(x => x.Name)
		</div>
	</div>

	<div class="form-group">
		<label for="Email">Email</label>
		<input type="text" asp-for="Email" class="form-control mb-1" placeholder="Digite o email do contato">
		<div class="mb-3">
			@Html.ValidationMessageFor(x => x.Email)
		</div>
	</div>

	<div class="form-group">
		<label for="Celular">Celular</label>
		<input type="text" asp-for="Celular" class="form-control mb-1" placeholder="Digite o número do contato">
		<div class="mb-3">
			@Html.ValidationMessageFor(x => x.Celular)
		</div>
	</div>

	<button type="submit" class="btn btn-primary w-100 mb-2">Adicionar</button>
	<a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>